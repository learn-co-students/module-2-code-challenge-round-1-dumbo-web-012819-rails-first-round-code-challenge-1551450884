<h1>Create New Heroine</h1>

<% if @heroine.errors.any? %>

    <h2><%= pluralize(@heroine.errors.count, "error") %> prohibited this heroine from being saved!</h2>

    <ol>
    <% @heroine.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ol>
<% end %>

<ul>
  <%= form_for @heroine do |f| %>
  <li>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </li>

  <li>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
  </li>

  <li>
    <%= f.label :power_id %>
    <%= f.collection_select :power_id, Power.all, :id, :name %>
  </li>

  <%= f.submit %>

  <% end %>
</ul>

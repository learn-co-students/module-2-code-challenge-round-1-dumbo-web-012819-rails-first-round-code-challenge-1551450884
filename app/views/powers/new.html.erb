<h1>Create Power:</h1>

<% if @power.errors.any? %>
  <ul>
    <% @power.errors.full_messages.each do |error| %>
      <li><%= error %>!</li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@power) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :description %>
  <%= f.text_field :description%>
  <br><br>
  <%= f.submit %>
<% end %>
